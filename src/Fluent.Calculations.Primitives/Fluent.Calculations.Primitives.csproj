<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Fluent Calculations Primitives</Title>
    <Authors>JITT Team</Authors>
    <Company>JITT</Company>
    <Product>Fluent Calculations Primitives</Product>
    <Description>Fluent Calculations is a set of libraries for building traceable calculations and logic. Primitives library provides foundation for future domain specific implementations.</Description>
    <Copyright>JITT</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/jitt-team/fluent-calculations-primitives</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <ApplicationIcon>fluent-calculations-icon.ico</ApplicationIcon>
    <PackageIcon>fluent-calculations-logo-128x128.png</PackageIcon>
    <PackageProjectUrl>https://github.com/jitt-team/fluent-calculations-primitives/wiki</PackageProjectUrl>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Version>1.0.16-alpha</Version>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
    <Configurations>Debug;Release;Sandcastle</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="....\**" />
    <EmbeddedResource Remove="....\**" />
    <None Remove="....\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="fluent-calculations-icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\.github\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\assets\fluent-calculations-logo-128x128.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MinVer" Version="4.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
</Project>
